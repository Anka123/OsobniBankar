<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank_512"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtUstedeno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="85dp"
        android:text="@string/ustedeno"
         />

    <TextView
        android:id="@+id/txtUstedeniIznos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:text="@string/ustedeniIznos"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="300dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgKontinuirana"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/kontinuirana" />

        <ImageButton
            android:id="@+id/imgProizvoljna"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/proizvoljna" />
    </LinearLayout>

</LinearLayout>