<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:columnCount="1" >

    <ImageButton
        android:id="@+id/btnBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="33dp"
        android:background="@drawable/grafbar"
        android:src="@drawable/grafbar" />

    <ImageButton
        android:id="@+id/btnLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnBar"
        android:background="@drawable/grafline"
        android:src="@drawable/grafline" />

    <ImageButton
        android:id="@+id/btnPieRashodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grafpierashodi"
        android:src="@drawable/grafpierashodi" />

    <ImageButton
        android:id="@+id/btnPiePrihodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnBar"
        android:background="@drawable/grafpieprihodi"
        android:src="@drawable/grafpieprihodi" />

</RelativeLayout>